{
    "system": {
        "dataset": "FLICKR",
        "batch_size": 4,
        "sampling_function": "kp_detection",

        "train_split": "train",
        "val_split": "val",
        "test_split": "test",

        "learning_rate": 0.00025,

        "pretrain": "cache/nnet/CenterNet-52/CenterNet-52_999999.pkl",
        
        "decay_rate": 10,

        "opt_algo": "adam",
        "prefetch_size": 6,
        
        "display": 100,
        "val_iter": 1000,
        "max_iter": 480000,
        "stepsize": 450000,
        "snapshot": 5000,

        "chunk_sizes": [4]
    },
    
    "db": {
        "rand_scale_min": 0.6,
        "rand_scale_max": 1.2,
        "rand_scale_step": 0.1,
        "rand_scales": null,

        "rand_crop": true,
        "rand_color": true,

        "border": 128,
        "gaussian_bump": true,

        "input_size": [511, 511],
        "output_sizes": [[128, 128]],

        "test_scales": [1],

        "top_k": 70,
        "categories": 1,
        "kp_categories": 1,
        "ae_threshold": 0.5,
        "nms_threshold": 0.5,

        "max_per_image": 100,

        "coordmap": true,
        "bert_model": "bert-base-uncased",
        "max_query_len": 128
    }
}
